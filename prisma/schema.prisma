generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Task {
  id                 Int      @id @default(autoincrement())
  titulo             String
  descripcion        String?
  status             String   @default("pendiente")
  fechaCreacion      DateTime @default(now())
  fechaActualizacion DateTime @updatedAt
}
